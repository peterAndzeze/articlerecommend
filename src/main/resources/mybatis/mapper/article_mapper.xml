<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.article.recommend.mapper.ArticleMapper" >
    <resultMap id="BaseResultMap" type="com.article.recommend.entity.ArticleInfo" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="content" property="content" jdbcType="VARCHAR" />
        <result column="topic_id" property="topic_id" jdbcType="BIGINT" />
        <result column="release_time" property="releaseTime" javaType="java.util.Date"/>
        <result column="source_url" property="sourceUrl" jdbcType="VARCHAR"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>

    </resultMap>

    <sql id="Base_Column_List" >
       id,content,topic_id,release_time,source_url,title
    </sql>
    <!-- 获取所有-->
    <select id="getAll" resultMap="BaseResultMap"  >
        SELECT
        <include refid="Base_Column_List" />
        FROM tb_article
    </select>
    <!--  根据id查询 -->
    <select id="getOne" parameterType="java.lang.Long" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM tb_article
        WHERE id = #{id}
    </select>
    <!--  单笔插入 -->
    <insert id="insert" parameterType="com.article.recommend.entity.ArticleInfo" >
        INSERT INTO
        tb_arctile
        (content,topic_id,release_time,source_url,title)
        VALUES
        (#{content}, #{topicId}, #{releaseTime},#{sourceUrl},#{title})
    </insert>
    <!-- 根据id修改信息-->
    <update id="update" parameterType="com.article.recommend.entity.ArticleInfo" >
        UPDATE
        tb_article
        SET
        <if test="content != null">name = #{content},</if>
        <if test="topicId != null">topic_id = #{topicId},</if>
        <if test="releaseTime!=null ">release_time=#{releaseTime}</if>
        <if test="sourceUrl!=null"> source_url=#{sourceUrl} </if>
        <if test="title!=null"> title=#{title}</if>
        WHERE
        id = #{id}
    </update>
    <!--  根据主键删除数据 -->
    <delete id="delete" parameterType="java.lang.Long" >
        DELETE FROM
        tb_article
        WHERE
        id =#{id}
    </delete>
</mapper>